@{
    ViewData["Title"] = "Lista de Personas Físicas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container p-2">
    <div class="row">
        <div class="col-6">
            <h3 class="text-primary">Lista de Personas Físicas</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddPerson" class="btn btn-success text-white">Agregar</a>
        </div>
    </div>

    <div class="pt-3">
        <table id="PersonsT" class="table table-striped table-bordered" style="width:100%">
            <tr>
                <td>Apellido Paterno</td>
                <td>Apellido Materno</td>
                <td>Nombre</td>
                <td>RFC</td>
                <td>Fecha Nacimiento</td>
            </tr>
        </table>
    </div>

</div>
@section Scripts{
    <script src="~/js/persons.js"></script>
}