@model WebApplicationMVC.Models.PersonModel;
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pt-4">
    <div class="row">
        <div class="col-12">
            <h3 class="text-primary">Agregar Persona Física</h3>
        </div>
    </div>
    
    <div class="form-row pt-4">
        <div class="col-md-12">
            <form asp-action="AddPerson" asp-controller="Persons">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstName"></label>                        
                    </div>
                    <div class="col-8">
                        <input asp-for="FirstName" class="form-control">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="LastName"></label>
                    </div>

                    <div class="col-md-8">
                        <input asp-for="LastName" class="form-control">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="RFC"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="RFC" class="form-control">
                        <span asp-validation-for="RFC" class="text-danger"></span>
                    </div>
               </div>
               
               <div class="form-group row">
                   <div class="col-md-4">
                       <label asp-for="BirthDate"></label>
                   </div>
                   <div class="col-md-8">
                       <input id="birthDate" asp-for="BirthDate" class="form-control">
                       <span asp-validation-for="BirthDate" class="text-danger"></span>
                   </div>
               </div>

               <div class="form-group row align-content-center">
                   <div class="col-6">
                       <button type="submit" class="btn btn-primary form-control">Guardar</button>
                   </div>
                   <div class="col-md-6">
                        <a class="btn btn-secondary form-control" asp-action="Index">Regresar</a>
                    </div>
               </div>

           </form>
    </div>
</div>
</div>
